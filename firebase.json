{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "**/*.py",
      "**/*.sh",
      "**/*.csv",
      "Fixtures_*.txt",
      "Apps_Script_Code.js",
      "database.rules*.json",
      "import_contacts_initial.html",
      "tournament_data/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  }
}

